
@{
    ViewData["Title"] = "Details";
}
@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.ViewModels.ConsultationViewModel

    <h1 class="mb-3">Detalii consultatie</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Symptoms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Symptoms)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnostic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnostic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prescriptions)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prescriptions)
            </dd>
        </dl>
    </div>
    <div class="btn-group" role="group" aria-label="Optiuni">
        <a asp-action="Details" asp-controller="SheetPatient" asp-route-id="@Model.SheetPatientId" class="btn btn-outline-secondary">Inapoi</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Modifica</a>
    </div>
}