
@{
    ViewData["Title"] = "Delete";
}
@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Models.Consultations.ConsultationDetailsViewModel

    <div class="main box">
        <div>
            <div class="container g-0">
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                        <h3 class="mb-3 text-color">Ești sigur că vrei să ștergi asta?</h3>
                            </div>
                            <div class="col-auto">
                                <div class="mb-3 d-lg-flex justify-content-lg-center">
                                    <div class="form-group btn-group" role="group" aria-label="Optiuni">
                                            <form asp-action="Delete">
                                                <input type="hidden" asp-for="Id" />
                                                <input type="submit" value="Sterge consultatia" class="btn btn-outline-danger" />
                                                <a asp-action="Details" asp-controller="PatientSheets" asp-route-id="@Model.SheetPatientId" class="btn btn-main-color-filled">Detalii fisa pacient</a>
                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SheetPatientId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SheetPatientId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Symptoms)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Symptoms)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Diagnostic)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Diagnostic)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Prescriptions)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Prescriptions)
                </dd>
            </dl>
        </div>
    </div>
}