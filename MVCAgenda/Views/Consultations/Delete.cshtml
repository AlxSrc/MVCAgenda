
@{
    ViewData["Title"] = "Delete";
}
@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.ConsultationViewModel

<div class="main box">
    <h3 class="mb-3 text-color">Are you sure you want to delete this?</h3>
    <div>
        <h4>Consultatie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SheetPatientId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SheetPatientId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Symptoms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Symptoms)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnostic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnostic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prescriptions)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prescriptions)
            </dd>
        </dl>

        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Sterge consultatia" class="btn btn-outline-danger" />
                <a asp-action="Details" asp-controller="FisePacienti" asp-route-id="@Model.SheetPatientId" class="btn btn-main-color-filled">Detalii fisa pacient</a>
            </form>
        </div>
    </div>
</div>
}