    @model MVCAgenda.Core.ViewModels.ConsultationViewModel

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Consultatie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SheetPatientId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SheetPatientId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Symptoms)
            </dt>
            <dd class="col-sm-10">
