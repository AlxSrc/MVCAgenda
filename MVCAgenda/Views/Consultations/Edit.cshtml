
@{
    ViewData["Title"] = "Edit";
}

@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.Domain.Consultation

    <h1>Edit</h1>

    <h4>Consultatie</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SheetPatientId" />
                <div class="form-group">
                    <label asp-for="CreationDate" class="control-label"></label>
                    <input asp-for="CreationDate" class="form-control" />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Symptoms" class="control-label"></label>
                    <textarea asp-for="Symptoms" class="form-control resizable"></textarea>
                    <span asp-validation-for="Symptoms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diagnostic" class="control-label"></label>
                    <textarea asp-for="Diagnostic" class="form-control resizable"></textarea>
                    <span asp-validation-for="Diagnostic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prescriptions" class="control-label"></label>
                    <textarea asp-for="Prescriptions" class="form-control resizable"></textarea>
                    <span asp-validation-for="Prescriptions" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Details" asp-controller="SheetPatient" asp-route-id="@Model.SheetPatientId">Inapoi</a>
    </div>
}