@{
	ViewData["Title"] = "Details";
}


@if (User.Identity.IsAuthenticated)
{
	@model MVCAgenda.Models.Rooms.RoomViewModel

    
	<div class="main box">
		<div class=" mt-3 d-lg-flex justify-content-lg-center">
			<div class="col-md-12">

				<div class="container g-0">
					<div class="row justify-content-between">
						<div class="col-auto">
							<h2 class="text-color text-center mb-3">Detalii</h2>
						</div>
						<div class="col-auto">
							<div class="form-group btn-group">
								<a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Inapoi</a>
								<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-main-color-filled">Modifică camera</a>
							</div>
						</div>
					</div>
				</div>

				<div class="input-group mb-3">
					<span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.Name)</span>
					<input asp-for="Name" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Name)" aria-describedby="basic-addon2" readonly>
				</div>

				<div class="input-group mb-3">
					<span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.PrimaryColor)</span>
					<input asp-for="PrimaryColor" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.PrimaryColor)" aria-describedby="basic-addon2" readonly>
				</div>

				<div class="input-group mb-3">
					<span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.SecondaryColor)</span>
					<input asp-for="SecondaryColor" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.SecondaryColor)" aria-describedby="basic-addon2" readonly>
				</div>

				<div class="input-group mb-3">
					<span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.Description)</span>
					<input asp-for="Description" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Description)" aria-describedby="basic-addon2" readonly>
				</div>
			</div>
		</div>
	</div>
}