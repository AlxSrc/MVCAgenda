
@{
    ViewData["Title"] = "Delete";
}


@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.RoomViewModel

    <div class="main box">
        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-md-6">
                <h3 class="text-color text-center mb-3">Ești sigur că dorești să ștergi acestă camera?</h3>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.RoomName)</span>
                    <input asp-for="RoomName" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.RoomName)" aria-describedby="basic-addon2" readonly>
                </div>
                <div class=" mt-3 d-lg-flex justify-content-lg-center">
                    <form asp-action="Delete">
                        <div class="form-group btn-group">
                            <a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Anulează</a>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Șterge camera" class="btn btn-outline-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}