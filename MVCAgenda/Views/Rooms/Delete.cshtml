
@{
    ViewData["Title"] = "Delete";
}


@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.RoomViewModel

    <h3>Esti sigur ca doresti sa stergi camera?</h3>
    <div class="row">

        <div class="col-md-6">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.RoomName)</span>
                <input asp-for="RoomName" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.RoomName)" aria-describedby="basic-addon2" readonly>
            </div>
        </div>

        <form asp-action="Delete">
            <div class="form-group btn-group">
                <a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Inapoi</a>
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Delete" class="btn btn-outline-danger" />
            </div>
            
        </form>
    </div>
}