
@{
    ViewData["Title"] = "Create";
}


@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.RoomViewModel

    <div class="main box">
        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2 class="text-color text-center mb-3">Adaugă o camera</h2>

                    <div class="form-floating col-lg-10 mb-3">
                        <input asp-for="RoomName" class="form-control" id="floatingInput1" placeholder="Obligatoriu">
                        <label for="floatingInput1" asp-for="RoomName"></label>
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>
                    <div class=" mt-3 d-lg-flex justify-content-lg-center">
                        <div class="form-group btn-group">
                            <a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Anulează</a>
                            <input type="submit" value="Adaugă o camera" class="btn btn-main-color-filled" />
                        </div>
                    </div>
                
                </form>
            </div>
        </div>
    </div>
 
}