@{
    ViewData["Title"] = "Lista";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.MVCAgendaManagement.ManageViewModel

    <h1>Lista cu medici</h1>

    <table class="table">
        <tbody>
            @foreach (var item in Model.Medics)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MedicName)
                    </td>
                    <td>
                        <a class="link-info" asp-action="Edit" asp-controller="Medics" asp-route-id="@item.Id">Modifica</a>
                        <a class="link-danger" asp-action="Delete" asp-controller="Medics" asp-route-id="@item.Id">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" asp-controller="Medics" class="btn btn-outline-primary">Adauga un medic nou</a>
    </p>

    <h1>Lista cu camere</h1>

    <table class="table">
        <tbody>
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomName)
                    </td>
                    <td>
                        <a class="link-info" asp-action="Edit" asp-controller="Rooms" asp-route-id="@item.Id">Modifica</a>
                        <a class="link-danger" asp-action="Delete" asp-controller="Rooms" asp-route-id="@item.Id">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" asp-controller="Rooms" class="btn btn-outline-primary">Adauga o camera noua</a>
    </p>


}