@{
    ViewData["Title"] = "Lista";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.MVCAgendaManagement.ManageViewModel

    <h1>Lista cu medici</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Medics[0].MedicName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Medics)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MedicName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Medici" asp-route-id="@item.Id">Modifica</a> |
                        <a asp-action="Delete" asp-controller="Medici" asp-route-id="@item.Id">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" asp-controller="Medici">Adauga un medic nou</a>
    </p>

    <h1>Lista cu camere</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].RoomName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Camere" asp-route-id="@item.Id">Modifica</a> |
                        <a asp-action="Delete" asp-controller="Camere" asp-route-id="@item.Id">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create" asp-controller="Rooms">Adauga o camera noua</a>
    </p>


}