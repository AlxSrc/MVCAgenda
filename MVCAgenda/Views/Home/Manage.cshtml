@{
    ViewData["Title"] = "Lista";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Models.Home.ManageViewModel

    <div class="main box">
        <div class="mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-lg-8">
                <div class="container g-0">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <h2 class="mb-3 text-center text-color">Personalul</h2>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Create" asp-controller="Medics" class="btn btn-main-color-filled">Adaugă un medic</a>
                        </div>
                    </div>
                </div>


                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Medics)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a class="link-info" asp-action="Edit" asp-controller="Medics" asp-route-id="@item.Id">Modifică medicul</a>
                                    <a class="link-danger" asp-action="Delete" asp-controller="Medics" asp-route-id="@item.Id">Șterge medicul</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="container g-0">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <h2 class="mb-3 text-center text-color">Camere</h2>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Create" asp-controller="Rooms" class="btn btn-main-color-filled">Adaugă o cameră</a>
                        </div>
                    </div>
                </div>
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.Rooms)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a class="link-info" asp-action="Edit" asp-controller="Rooms" asp-route-id="@item.Id">Modifică camera</a>
                                    <a class="link-danger" asp-action="Delete" asp-controller="Rooms" asp-route-id="@item.Id">Șterge camera</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="container g-0">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <h2 class="mb-3 text-center text-color">Administrarea conturilor</h2>
                        </div>
                        <div class="col-auto">
                            <a class="btn btn-main-color-filled" asp-controller="Account" asp-action="Register">Adaugă un cont</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}