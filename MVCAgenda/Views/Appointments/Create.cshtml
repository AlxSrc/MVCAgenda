@model MVCAgenda.Models.Appointments.AppointmentCreateViewModel

@{
	var pageTitle = "Adaugă o programare";

	ViewData["Title"] = pageTitle;
}

<nav aria-label="breadcrumb" class="navigation">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-action="Index" asp-controller="Home">
				<i class="fas fa-home"></i>
				<span>Acasa</span>
			</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-action="Index" asp-controller="Appointments">
				<i class="fas fa-clipboard-list"></i>
				<span>Programări</span>
			</a>
		</li>
		@if (Model.PatientId > 0)
		{
			<li class="breadcrumb-item">
				<a asp-action="Details" asp-controller="Patients" asp-route-id="@Model.PatientId">
					<i class="fas fa-hospital-user"></i>
					<span>@Model.FirstName.ToUpper() @Model.LastName</span>
				</a>
			</li>
		}
		<li class="breadcrumb-item active">
			<span>@pageTitle</span>
		</li>
	</ol>
</nav>

<form asp-action="Create">
	<section class="section">
		<header>
			<strong class="title">
				<i class="fas fa-clipboard-list"></i>
				@pageTitle
			</strong>
			<div class="actions">
				<button type="submit" class="btn btn-primary">
					<i class="far fa-save"></i>
					Salveaza
				</button>
			</div>
		</header>
		<div class="content">
			<div class="data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input asp-for="PatientId" type="hidden"/>
				<input asp-for="ResponsibleForAppointment" type="hidden"/>
				<div class="row">
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="FirstName" class="form-control" id="floatingInput1" placeholder="Obligatoriu">
							<label for="floatingInput1" asp-for="FirstName"></label>
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="LastName" class="form-control" id="floatingInput2" placeholder="Obligatoriu">
							<label for="floatingInput2" asp-for="LastName"></label>
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="PhoneNumber" class="form-control" id="floatingInput3" placeholder="Obligatoriu">
							<label for="floatingInput3" asp-for="PhoneNumber"></label>
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="Mail" class="form-control" id="floatingInput4" placeholder="Obligatoriu">
							<label for="floatingInput4" asp-for="Mail"></label>
							<span asp-validation-for="Mail" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<select asp-for="MedicId" class="form-control" id="floatingInput5" asp-items="ViewBag.MedicId"></select>
							<label for="floatingInput5" asp-for="MedicId"></label>
							<span asp-validation-for="MedicId" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<select asp-for="RoomId" class="form-control" id="floatingInput6" asp-items="ViewBag.RoomId"></select>
							<label for="floatingInput6" asp-for="RoomId"></label>
							<span asp-validation-for="RoomId" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="StartDate" class="form-control" id="floatingInput7" placeholder="Obligatoriu">
							<label for="floatingInput7" asp-for="StartDate"></label>
							<span asp-validation-for="StartDate" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="EndDate" class="form-control" id="floatingInput8" placeholder="Obligatoriu">
							<label for="floatingInput8" asp-for="EndDate"></label>
							<span asp-validation-for="EndDate" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<input asp-for="Procedure" class="form-control" id="floatingInput7" placeholder="Obligatoriu">
							<label for="floatingInput7" asp-for="Procedure"></label>
							<span asp-validation-for="Procedure" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-floating mb-3">
							<textarea asp-for="Comments" class="form-control resizable" id="floatingInput8" placeholder="Obligatoriu"></textarea>
							<label for="floatingInput8" asp-for="Comments"></label>
							<span asp-validation-for="Comments" class="text-danger"></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</form>

@section Scripts
{
	@(await Html.PartialAsync("_ValidationScriptsPartial"))
}