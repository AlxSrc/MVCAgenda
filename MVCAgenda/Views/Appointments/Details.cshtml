
@{
    ViewData["Title"] = "Detalii programare";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.ViewModels.AppointmentViewModel


    <h1>Detalii</h1>

    <div>
        <h4>Programare      @Html.DisplayFor(model => model.AppointmentDate)        @Html.DisplayFor(model => model.AppointmentHour)</h4>
        <hr />

        <div>
            <h4>Detalii despre pacient</h4>
        </div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecondName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhonNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhonNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blacklist)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Blacklist)
            </dd>
        </dl>

        <hr />
        <div>
            <h4>Detalii despre programare</h4>
        </div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Medic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentHour)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentHour)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Procedure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Procedure)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Made)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.MadeText)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ResponsibleForAppointment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ResponsibleForAppointment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentCreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentCreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Inapoi la lista de programari</a> |
        <a asp-action="Edit" asp-route-id="@Model.Id">Modifica</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Sterge</a>
    </div>
}