
@{
    ViewData["Title"] = "Detalii programare";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.Domain.Appointment


    <h1>Detalii</h1>

    <div>
        <h4>Programare      @Html.DisplayFor(model => model.AppointmentDate)        @Html.DisplayFor(model => model.AppointmentHour)</h4>
        <hr />

        <div>
            <h4>Detalii despre pacient</h4>
        </div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.SecondName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.SecondName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.PhonNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.PhonNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Mail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Patient.Mail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Patient.Blacklist)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Patient.Blacklist == 1)
                {
                    <span class="badge bg-Dangersuccess">Da</span>
                }
                else if (Model.Patient.Blacklist == 0)
                {
                    <span class="badge bg-success">Nu</span>
                }
            </dd>
        </dl>

        <hr />
        <div>
            <h4>Detalii despre programare</h4>
        </div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Medic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medic.MedicName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room.RoomName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentHour)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentHour)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Procedure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Procedure)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Made)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Made == 1)
                {
                    <span class="badge bg-success">Da</span>
                }
                else if (Model.Made == 0)
                {
                    <span class="badge bg-danger">Nu</span>
                }
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ResponsibleForAppointment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ResponsibleForAppointment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppointmentCreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppointmentCreationDate)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Inapoi la lista de programari</a> |
        <a asp-action="Edit" asp-route-id="@Model.Id">Modifica</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Sterge</a>
    </div>
}