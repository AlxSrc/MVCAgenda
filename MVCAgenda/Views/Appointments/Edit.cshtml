@model MVCAgenda.Models.Appointments.AppointmentEditViewModel

@{
	var pageTitle = "Modifică programarea";

	ViewData["Title"] = pageTitle;
}

<nav aria-label="breadcrumb" class="navigation">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-action="Index" asp-controller="Home">
				<i class="fas fa-home"></i>
				<span>Acasă</span>
			</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-action="Index" asp-controller="Appointments">
				<i class="fas fa-clipboard-list"></i>
				<span>Programări</span>
			</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-action="Details" asp-controller="Patients" asp-route-id="@Model.PatientId">
				<i class="fas fa-hospital-user"></i>
				<span>@Model.PatientName</span>
			</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-action="Details" asp-controller="Appointments" asp-route-id="@Model.Id">
				<i class="fas fa-clipboard-list"></i>
				<span>Detalii programare</span>
			</a>
		</li>
		<li class="breadcrumb-item active">
			<span>@pageTitle</span>
		</li>
	</ol>
</nav>

<form asp-action="Edit">
	<section class="section">
		<header>
			<strong class="title">
				<i class="fas fa-clipboard-list"></i>
				@pageTitle
			</strong>
			<div class="actions">
				<button type="submit" class="btn btn-primary">
					<i class="far fa-save"></i>
					Salvează
				</button>
			</div>
		</header>
		<div class="content">
			<div class="data">
				<input asp-for="Id" type="hidden"/>
				<input asp-for="PatientId" type="hidden"/>
				<input asp-for="PatientId" type="hidden"/>
				<input asp-for="Hidden" type="hidden"/>
				<input asp-for="ResponsibleForAppointment" type="hidden"/>
				<input asp-for="AppointmentCreationDate" type="hidden"/>
				<div class="row">
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<select asp-for="MedicId" class="form-control" id="floatingInput5" asp-items="ViewBag.MedicId"></select>
							<label for="floatingInput5" asp-for="MedicId"></label>
							<span asp-validation-for="MedicId" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<select asp-for="RoomId" class="form-control" id="floatingInput6" asp-items="ViewBag.RoomId"></select>
							<label for="floatingInput6" asp-for="RoomId"></label>
							<span asp-validation-for="RoomId" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<input asp-for="StartDate" class="form-control" id="floatingInput7" placeholder="Obligatoriu" asp-format="{0:yyyy-MM-ddTHH:mm}">
							<label for="floatingInput7" asp-for="StartDate"></label>
							<span asp-validation-for="StartDate" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<input asp-for="EndDate" class="form-control" id="floatingInput8" placeholder="Obligatoriu" asp-format="{0:yyyy-MM-ddTHH:mm}">
							<label for="floatingInput8" asp-for="EndDate"></label>
							<span asp-validation-for="EndDate" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<input asp-for="Procedure" class="form-control" id="floatingInput9" placeholder="Obligatoriu">
							<label for="floatingInput9" asp-for="Procedure"></label>
							<span asp-validation-for="Procedure" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="form-floating">
							<textarea asp-for="Comments" class="form-control resizable" id="floatingInput10" placeholder="Obligatoriu"></textarea>
							<label for="floatingInput10" asp-for="Comments"></label>
							<span asp-validation-for="Comments" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6 mb-3">
						<div class="input-group">
							<div class="input-group-text">
								<input class="form-check-input mt-0" type="checkbox" asp-for="PrivateAppointment" aria-label="Checkbox for following text input">
							</div>
							<input type="text" value="Programare privată" class="form-control" aria-label="Text input with checkbox" readonly>
						</div>
					</div>
					<div class="col-6d">
						<div class="input-group">
							<div class="input-group-text">
								<input class="form-check-input mt-0" type="checkbox" asp-for="Made" aria-label="Checkbox for following text input">
							</div>
							<input type="text" value="Programare efectuată" class="form-control" aria-label="Text input with checkbox" readonly>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</form>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}