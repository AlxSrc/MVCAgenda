
@{
    ViewData["Title"] = "Delete";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Models.Appointments.AppointmentDetailsViewModel
    <div class="main box">

        <div class="container">
            <div class="container g-0">
                <div class="row justify-content-between">
                    <div class="col-auto">
                        <h2 class="text-color mb-3 text-center">Sunteți sigur că doriți să ștergeți aceasta programare?</h2>
                    </div>
                    <div class="col-auto">
                        <form asp-action="Delete">
                            <div class="btn-group" role="group" aria-label="Opțiuni">
                                <a asp-action="Index" asp-route-Daily="true" class="btn btn-outline-secondary">Anulează</a>
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Șterge programare" class="btn btn-outline-danger" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.FirstName)</span>
                        <input asp-for="FirstName" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.FirstName)" aria-describedby="basic-addon1" readonly>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.LastName)</span>
                        <input asp-for="LastName" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.LastName)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon3">@Html.DisplayNameFor(model => model.PhoneNumber)</span>
                        <input asp-for="PhoneNumber" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.PhoneNumber)" aria-describedby="basic-addon3" readonly>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.Mail)</span>
                        <input asp-for="Mail" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Mail)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.Medic)</span>
                        <input asp-for="Medic" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Medic)" aria-describedby="basic-addon1" readonly>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.Room)</span>
                        <input asp-for="Room" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Room)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.StartDate)</span>
                        <input asp-for="StartDate" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.StartDate)" aria-describedby="basic-addon1" readonly>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.EndDate)</span>
                        <input asp-for="EndDate" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.EndDate)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.MadeText)</span>
                        <label asp-for="MadeText" class="form-control" aria-describedby="basic-addon1">@Html.Raw(Model.MadeText)</label>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.Procedure)</span>
                        <input asp-for="Procedure" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Procedure)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.AppointmentCreationDate)</span>
                        <input asp-for="AppointmentCreationDate" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.AppointmentCreationDate)" aria-describedby="basic-addon1" readonly>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.ResponsibleForAppointment)</span>
                        <input asp-for="ResponsibleForAppointment" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.ResponsibleForAppointment)" aria-describedby="basic-addon2" readonly>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.Comments)</span>
                        <input asp-for="Comments" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.Comments)" aria-describedby="basic-addon1" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}