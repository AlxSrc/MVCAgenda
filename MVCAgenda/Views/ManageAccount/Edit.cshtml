
@{
    ViewData["Title"] = "Edit";
}
@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Models.Accounts.ManageAccount.ProfileViewModel

    <div class="main box">
        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-md-8">
                <form asp-action="Edit">


                    <div class="container g-0">
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                <h2 class="mb-3 text-color text-center">Modifică contul</h2>
                            </div>
                            <div class="col-auto">
                                <div class="form-group btn-group" role="group" aria-label="Optiuni">
                                    <a asp-action="Index" asp-controller="Patients" class="btn btn-outline-secondary">Anulează</a>
                                    <input type="submit" value="Salvează modificările" class="btn btn-main-color-filled" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" id="floatingInput" placeholder="Nume">
                        <label for="floatingInput" asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" id="floatingInput" placeholder="Prenume">
                        <label for="floatingInput" asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control" id="floatingInput" placeholder="0740 123 123">
                        <label for="floatingInput" asp-for="Username"></label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ProfilePicture" class="form-control" id="floatingInput" placeholder="E-mail">
                        <label for="floatingInput" asp-for="ProfilePicture"></label>
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
}
