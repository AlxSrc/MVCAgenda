@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Models.Accounts.Roles.UsersRolesViewModel

    <h2 class="text-color m-3">Rolurile utilizatorilor</h2>
    <div class="main box">
        <table class="table">
            <thead class="borderless-table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Users[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users[0].Roles)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @string.Join(", ", item.Roles.ToList())
                        </td>
                        <td>
                            <a class="btn btn-main-color-filled" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@item.UserId">Modifică rolurile</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}