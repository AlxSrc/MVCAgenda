@{
    ViewData["Title"] = "Create";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Models.Patients.PatientViewModel

    <div class="main box">
        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-8">
                <form asp-action="Create">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="SheetPatientId" type="hidden" />
                    <input asp-for="Hidden" type="hidden" />

                    <div class="container g-0">
                        <div class="row justify-content-between">
                            <div class="col-auto">
                                <h1 class="text-color text-center mb-3">Adaugă un pacient</h1>
                            </div>
                            <div class="col-auto">
                                <div class=" mt-3 d-lg-flex justify-content-lg-center">
                                    <div class="form-group btn-group" role="group" aria-label="Optiuni">
                                        <a asp-action="Index" class="btn btn-outline-secondary">Anulează</a>
                                        <input type="submit" value="Adaugă un pacient" class="btn btn-main-color-filled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" id="floatingInput1" placeholder="Obligatoriu">
                        <label for="floatingInput1">@Html.DisplayNameFor(model => model.FirstName)*</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" id="floatingInput2" placeholder="optional">
                        <label for="floatingInput2" asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" id="floatingInput3" placeholder="0740 123 123">
                        <label for="floatingInput3" >@Html.DisplayNameFor(model => model.PhoneNumber)*</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Mail" class="form-control" id="floatingInput4" placeholder="name@example.com">
                        <label for="floatingInput4" asp-for="Mail"></label>
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-text">
                            <input class="form-check-input mt-0" type="checkbox" asp-for="Blacklist" aria-label="Checkbox for following text input">
                        </div>
                        <input type="text" value="Lista neagră" class="form-control" aria-label="Text input with checkbox" readonly>
                    </div>

                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}