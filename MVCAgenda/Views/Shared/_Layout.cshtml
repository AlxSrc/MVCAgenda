<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCAgenda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    

    <!-- Syncfusion Essential JS 2 Styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/bootstrap4.css" />
    <!-- Syncfusion Essential JS 2 Scripts -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    
    
    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
</head>
<body>
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <div class="container g-0 custom-header">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="row justify-content-between">
                    <div class="col-auto">
                        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
                            @*<svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>*@
                            <span class="fs-4 text-color ms-3">Clinica</span>
                            <img class="sigla" src="https://esderm.ro/wp-content/uploads/2020/09/logo-esderm-web.png">
                        </a>
                        
                    </div>
                    
                    <div class="col-auto">
                        <ul class="nav nav-pills">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Scheduler" asp-action="Index">Calendar</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Index" asp-route-Daily="true">Programări</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index">Pacienți</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Manage">Administrare</a>
                            </li>
                            
                            <li class="nav-item">
                                <img class="wellcome-image" src="https://imgix.bustle.com/uploads/image/2021/7/16/07062a59-9fd1-41f8-9c99-e4c0f5d80c05-06546552-d025-4a16-ab18-d252ff01fa90-getty-1205000579.jpeg?w=800&fit=crop&crop=focalpoint&auto=format%2Ccompress&fp-x=0.4587&fp-y=0.754">
                            </li>
                            <li class="nav-item">
                                <a class="nav-link wellcome-name" asp-controller="UserRoles" asp-action="Index">
                                    @if (String.Compare(DateTime.Now.ToString("t"),"12:00") < 0)
                                    {
                                        <text>Bună diminea, @User.Identity.Name</text>
                                    }
                                    else if (String.Compare(DateTime.Now.ToString("t"),"18:00") > 0)
                                    {
                                        <text>Bună seara, @User.Identity.Name</text>
                                    }
                                    else
                                    {
                                        <text>Bună ziua, @User.Identity.Name</text>
                                    }
                                </a>
							</li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger" asp-area="" asp-controller="Account" asp-action="Logout">Deconectare</a>
                            </li>
                        </ul>
                    </div>
                </div>

            }
            else
            {
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Conectare</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                </ul>
            }
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container main-footer text-center">
            &copy; 2021 - Agenda online, Clinica Esderm - <a class="main-footer" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Syncfusion Essential JS 2 ScriptManager -->
    <ejs-scripts></ejs-scripts>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
