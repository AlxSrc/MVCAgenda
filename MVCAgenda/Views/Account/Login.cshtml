@{
	Layout = "_EmptyLayout";
	ViewData["Title"] = "Login";
}
@model MVCAgenda.Models.Accounts.LoginViewModel

<div class="d-flex h-100">
	<div class="section m-auto">
		<div class="content">
			<div class="data">
				<form method="post">
					<h3 class="mb-3 fw-normal text-color">Conectează-te pentru a continua</h3>
					<div class="form-floating mb-3">
						<input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
						<label for="floatingInput">@Html.DisplayNameFor(model => model.Email)</label>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
						<label for="floatingPassword">@Html.DisplayNameFor(model => model.Password)</label>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<button class="w-100 btn btn-lg btn-primary" type="submit">Conectare</button>
				</form>
			</div>
		</div>
	</div>
</div>