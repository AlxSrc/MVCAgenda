
@{
    ViewData["Title"] = "Create";
}


@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.MedicViewModel

    <div class="main box">

        <div class="mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-md-6">
                <form asp-action="Create">

                    <h2 class="text-color text-center mb-3">Adaugă un medic</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="MedicName" class="form-control" id="floatingInput1" placeholder="Obligatoriu">
                        <label for="floatingInput1" asp-for="MedicName"></label>
                        <span asp-validation-for="MedicName" class="text-danger"></span>
                    </div>

                    <div class=" mt-3 d-lg-flex justify-content-lg-center">
                        <div class="form-group btn-group">
                            <a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Anulează</a>
                            <input type="submit" value="Adaugă un medic" class="btn btn-main-second-color-filled" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
