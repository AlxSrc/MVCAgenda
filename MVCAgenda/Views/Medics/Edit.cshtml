
@{
    ViewData["Title"] = "Edit";
}

@if (User.Identity.IsAuthenticated)
{
    @model MVCAgenda.Core.ViewModels.MedicViewModel

    <h1>Modifica</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Hidden" />
                <div class="form-group">
                    <label asp-for="MedicName" class="control-label"></label>
                    <input asp-for="MedicName" class="form-control" />
                    <span asp-validation-for="MedicName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Manage" asp-controller="Home">Inapoi</a>
    </div>
}