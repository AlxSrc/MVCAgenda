
@{
    ViewData["Title"] = "Details";
}


@if (User.Identity.IsAuthenticated)
{

    @model MVCAgenda.Core.ViewModels.MedicViewModel

    <div class="main box">
        <div class=" mt-3 d-lg-flex justify-content-lg-center">
            <div class="col-md-12">

                <div class="container g-0">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <h2 class="text-color text-center mb-3">Detalii medic</h2>
                        </div>
                        <div class="col-auto">
                            <div class="form-group btn-group">
                                <a asp-action="Manage" asp-controller="Home" class="btn btn-outline-secondary">Anulează</a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-main-color-filled">Modifică medic</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">@Html.DisplayNameFor(model => model.MedicName)</span>
                    <input asp-for="MedicName" type="text" class="form-control" aria-label="@Html.DisplayNameFor(model => model.MedicName)" aria-describedby="basic-addon2" readonly>
                </div>
            </div>
        </div>
    </div> 
}