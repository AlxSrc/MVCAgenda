@model MVCAgenda.Models.Home.ManageViewModel

@{
	var pageTitle = "Administrare";

	ViewData["Title"] = pageTitle;
}

<nav aria-label="breadcrumb" class="navigation">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-action="Index" asp-controller="Home">
				<i class="fas fa-home"></i>
				<span>Acasă</span>
			</a>
		</li>
		<li class="breadcrumb-item active">
			<span>@pageTitle</span>
		</li>
	</ol>
</nav>

<section class="section">
	<header>
		<strong class="title">
			<i class="fas fa-user-md"></i>
			Personalul
		</strong>
		<div class="actions">
			<a asp-action="Create" asp-controller="Medics" class="btn btn-primary">
				<i class="fas fa-plus"></i>
				Adaugă un medic
			</a>
		</div>
	</header>
	<div class="content">
		<table>
			<thead>
				<tr>
					<th>Nume</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@if (Model.Medics.Count > 0)
				{
					@foreach (var item in Model.Medics)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td class="text-end">
								<div class="dropdown d-inline-block">
									<button class="btn btn-main-color-filled dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
										Detalii
									</button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
										<li>
											<a class="dropdown-item" asp-action="Edit" asp-controller="Medics" asp-route-id="@item.Id">Modifică</a>
										</li>
										<li>
											<a class="dropdown-item" asp-action="Details" asp-controller="Medics" asp-route-id="@item.Id">Detalii medic</a>
										</li>
									</ul>
								</div>
							</td>
						</tr>
					}
				}
				else
				{
					<tr class="no-hover">
						<td colspan="2" class="text-center">
							Nu s-au gasit date pentru filtrele aplicate
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>

<section class="section">
	<header>
		<strong class="title">
			<i class="fas fa-tag"></i>
			Camere
		</strong>
		<div class="actions">
			<a asp-action="Create" asp-controller="Rooms" class="btn btn-primary">
				<i class="fas fa-plus"></i>
				Adaugă o camera
			</a>
		</div>
	</header>
	<div class="content">
		<table>
			<thead>
				<tr>
					<th>Nume</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@if (Model.Rooms.Count > 0)
				{
					@foreach (var item in Model.Rooms)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Name)
							</td>
							<td class="text-end">
								<div class="dropdown d-inline-block">
									<button class="btn btn-main-color-filled dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
										Detalii
									</button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
										<li>
											<a class="dropdown-item" asp-action="Edit" asp-controller="Rooms" asp-route-id="@item.Id">Modifică camera</a>
										</li>
										<li>
											<a class="dropdown-item" asp-action="Details" asp-controller="Rooms" asp-route-id="@item.Id">Detalii camera</a>
										</li>
									</ul>
								</div>
							</td>
						</tr>
					}
				}
				else
				{
					<tr class="no-hover">
						<td colspan="2" class="text-center">
							Nu s-au gasit date pentru filtrele aplicate
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>

@if (User.IsInRole("Admin"))
{
	<section class="section">
		<header>
			<strong class="title">
				<i class="fas fa-user-tag"></i>
				Administrarea rorulilor
			</strong>
			<div class="actions">
				<a asp-action="Index" asp-controller="UserRoles" class="btn btn-primary">
					<i class="fas fa-tools"></i>
					Modifică rolurile conturilor
				</a>
				<a asp-action="Index" asp-controller="RoleManager" class="btn btn-primary">
					<i class="fas fa-users-cog"></i>
					Modifică rolurile
				</a>
			</div>
		</header>
	</section>

	<section class="section">
		<header>
			<strong class="title">
				<i class="fas fa-info-circle"></i>
				Loguri
			</strong>
			<div class="actions">
				<a asp-action="Index" asp-controller="Logging" class="btn btn-primary">
					<i class="fas fa-history"></i>
					Lista cu loguri
				</a>
			</div>
		</header>
	</section>
}